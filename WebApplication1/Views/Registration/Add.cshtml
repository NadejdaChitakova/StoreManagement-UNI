@model WebApplication1.Models.AddUserVM

<form method="post" action="Add">
    <div class="form-group">
        <label for="">Email</label>
        <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" asp-for="Email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="">Username</label>
        <input type="text" class="form-control" aria-describedby="username" placeholder="Enter username" asp-for="Username">
    </div>
    <div class="form-group">
        <label for="">Password</label>
        <input type="password" class="form-control" aria-describedby="password" placeholder="Enter password" asp-for="Password">
    </div>
    <div class="form-group">
        <label for="">Phone number</label>
        <input type="tel" class="form-control" aria-describedby="phoneNumber" placeholder="Enter phone number" asp-for="Phone">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>