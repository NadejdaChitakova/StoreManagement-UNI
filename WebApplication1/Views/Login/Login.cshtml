@model WebApplication1.Models.LoginVM

<form method="post" action="Login">
    <div class="form-group">
        <label for="">Username</label>
        <input type="username" class="form-control" aria-describedby="username" asp-for="Username">
    </div>

    <div class="form-group">
        <label for="">Password</label>
        <input type="password" class="form-control" aria-describedby="password" asp-for="Password">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>